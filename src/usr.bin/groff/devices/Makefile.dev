#	@(#)Makefile.dev	6.2 (Berkeley) 3/16/91

# Client Makefiles define DEVICE and FONTFILES and provide rules for
#	individual font files

.include "../../Makefile.fontdir"

DEVICEDIR?=	$(FONTDIR)/dev$(DEVICE)
FONTOWN?=	bin
FONTGRP?=	bin
FONTMODE?=	444

.MAIN: all

all:	$(FONTFILES)

.if !target(obj)
.if defined(NOOBJ)
obj:
.else
obj:
	@cd ${.CURDIR}; rm -rf obj; \
	here=`pwd`; dest=/usr/obj/`echo $$here | sed 's,/usr/src/,,'`; \
	echo "$$here -> $$dest"; ln -s $$dest obj; \
	if test -d /usr/obj -a ! -d $$dest; then \
		mkdir -p $$dest; \
	else \
		true; \
	fi;
.endif
.endif

.if !target(clean)
CLEANFILES+=	$(FONTFILES)

clean cleandir:
	-rm -f $(CLEANFILES)
.endif

.if !target(install)
install:
	-for f in $(FONTFILES); do \
		install -c -o $(FONTOWN) -g $(FONTGRP) -m $(FONTMODE) $(.CURDIR)/$$f \
			$(DESTDIR)$(DEVICEDIR); \
	done
.endif
