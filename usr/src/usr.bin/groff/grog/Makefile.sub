MAN1=grog.n
CLEANADD=grog

all: grog

grog: grog.pl grog.sh
	if test -n "$(PERLPATH)" && test -f "$(PERLPATH)"; then \
	  rm -f $@; \
	  sed -e 's;/usr/bin/perl;$(PERLPATH);' $(srcdir)/grog.pl >$@; \
	else \
	  rm -f $@; \
	  sed "$(SH_SCRIPT_SED_CMD)" $(srcdir)/grog.sh >$@; \
	fi
	chmod +x $@

install_data: grog
	-test -d $(bindir) || mkdir $(bindir)
	-rm -f $(bindir)/grog
	$(INSTALL_PROGRAM) grog $(bindir)/grog

uninstall_sub:
	-rm -f $(bindir)/grog
